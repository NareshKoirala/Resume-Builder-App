<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Resume_Builder_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Resume_Builder_MAUI"
    xmlns:views="clr-namespace:Resume_Builder_MAUI.View"
    Title="Resume Builder"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="User Input"
        ContentTemplate="{DataTemplate views:UserInput}"
        Route="UserInput" />

    <TabBar>

        <ShellContent
            Title="User"
            Icon="tabbar_user.png"
            ContentTemplate="{DataTemplate views:UserSetting}"
            Route="UserSetting" />
        
        <ShellContent
            Title="Dash Board"
            Icon="tabbar_home.png"
            ContentTemplate="{DataTemplate views:MainDashboard}"
            Route="MainDashboard" />

        <ShellContent
            Title="Jobs"
            Icon="tabbar_dataset.png"
            ContentTemplate="{DataTemplate views:DocsGen}"
            Route="DocsGen" />
        
    </TabBar>

</Shell>
